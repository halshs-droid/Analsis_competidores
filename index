<body>

    <header>
        <h1>An치lisis Comparativo de Competidores (Sector Aceros/Construcci칩n)</h1>
        <p>Dashboard Interactivo y Din치mico. Ajuste los pesos para recalcular los puntajes totales.</p>
    </header>

    <div class="dashboard-container">
        <div class="controls-panel">
            <h2>丘뙖잺 Controles de Ponderaci칩n y Filtro</h2>
            
            <div class="control-group">
                <h3>Ajustar Pesos (W)</h3>
                <label for="weight_redes">Redes Sociales (<span id="value_redes" class="slider-value">50%</span>)</label>
                <input type="range" id="weight_redes" min="0" max="100" value="33" oninput="updateDashboard()">

                <label for="weight_edificaciones">Edificaciones (<span id="value_edificaciones" class="slider-value">50%</span>)</label>
                <input type="range" id="weight_edificaciones" min="0" max="100" value="33" oninput="updateDashboard()">

                <label for="weight_mercado">Tipos de Mercado (<span id="value_mercado" class="slider-value">50%</span>)</label>
                <input type="range" id="weight_mercado" min="0" max="100" value="34" oninput="updateDashboard()">
            </div>
            
            <hr>

            <div class="control-group">
                <h3>Seleccionar Proveedores para Comparaci칩n (Radar)</h3>
                <div id="multiselect_proveedores" class="multiselect">
                    </div>
            </div>

            <button onclick="openRadarModal()" style="width: 100%; padding: 10px; background-color: var(--color-primary); color: white; border: none; border-radius: 4px; cursor: pointer; margin-top: 10px;">
                Ver Comparaci칩n Radar Ampliada
            </button>
        </div>

        <div class="main-content">
            
            <div class="chart-box">
                <h2>游끥 Ranking de Proveedores (Puntaje Total)</h2>
                <canvas id="barChart"></canvas>
            </div>

            <div class="summary-box">
                <h2>游늳 Estad칤sticas Agregadas (Basado en Puntuaci칩n Normalizada)</h2>
                <div id="stats_summary">
                    </div>
            </div>
            
        </div>
    </div>

    <div id="radarModal" class="modal">
        <div class="modal-content">
            <span class="close-button" onclick="closeRadarModal()">&times;</span>
            <h2>Gr치fico Radar: Comparaci칩n Multicriterio</h2>
            <canvas id="radarChart"></canvas>
        </div>
    </div>

    <script>
        // Datos del archivo CSV normalizados y con puntuaciones
        const data = [
            { empresa: "Yohersa", productos_count: 9, ano_inicio: 1960, 
              tipos_mercado: "Industrial / Construcci칩n / Mayorista / Minorista",
              edificaciones: "Industrial / Comercial / Residencial", 
              redes: "Facebook / Instagram / YouTube / TikTok",
              score_redes: 4, score_edificaciones: 3, score_mercado: 4 }, // Max: 4/4/6
            { empresa: "Covema", productos_count: 10, ano_inicio: 2003, 
              tipos_mercado: "Distribuci칩n aceros / Ferreter칤a",
              edificaciones: "Industrial / Comercial / Residencial", 
              redes: "Facebook / Instagram / TikTok / YouTube",
              score_redes: 4, score_edificaciones: 3, score_mercado: 2 },
            { empresa: "Javisac", productos_count: 6, ano_inicio: 2006, 
              tipos_mercado: "Ferreter칤a / Servicios de corte",
              edificaciones: "Residencial / Comercial", 
              redes: "Facebook",
              score_redes: 1, score_edificaciones: 2, score_mercado: 2 },
            { empresa: "Aceros Flovicsa", productos_count: 4, ano_inicio: 2008, 
              tipos_mercado: "Venta por mayor materiales de construcci칩n",
              edificaciones: "Industrial / Obras civiles", 
              redes: "Facebook",
              score_redes: 1, score_edificaciones: 2, score_mercado: 1 },
            { empresa: "Aceros Ugartesa", productos_count: 4, ano_inicio: 2013, 
              tipos_mercado: "Venta minorista local",
              edificaciones: "Residencial / peque침as obras", 
              redes: "Facebook",
              score_redes: 1, score_edificaciones: 2, score_mercado: 1 }
        ];

        // M치ximos Puntajes para normalizaci칩n en Gr치fico Radar
        const MAX_SCORE = {
            redes: 4,
            edificaciones: 4,
            mercado: 6
        };

        let barChart;
        let radarChart;

        // Paleta de colores pasteles
        const PASTE_COLORS = [
            'rgba(173, 216, 230, 0.8)', // Azul Claro
            'rgba(255, 179, 186, 0.8)', // Rosa Claro
            'rgba(193, 225, 193, 0.8)', // Verde Menta
            'rgba(255, 223, 186, 0.8)', // Naranja P치lido
            'rgba(255, 255, 179, 0.8)'  // Amarillo Claro
        ];

        const PASTE_BORDER_COLORS = [
            'rgba(173, 216, 230, 1)',
            'rgba(255, 179, 186, 1)',
            'rgba(193, 225, 193, 1)',
            'rgba(255, 223, 186, 1)',
            'rgba(255, 255, 179, 1)'
        ];

        // --- Funciones de Inicializaci칩n ---

        function initMultiselect() {
            const container = document.getElementById('multiselect_proveedores');
            data.forEach((item, index) => {
                const label = document.createElement('label');
                label.innerHTML = `
                    <input type="checkbox" name="proveedor_select" value="${item.empresa}" onchange="updateDashboard()" ${index < 2 ? 'checked' : ''}>
                    ${item.empresa}
                `;
                container.appendChild(label);
            });
        }

        function calculateScores(data) {
            // Obtener pesos
            const w_redes = parseFloat(document.getElementById('weight_redes').value);
            const w_edificaciones = parseFloat(document.getElementById('weight_edificaciones').value);
            const w_mercado = parseFloat(document.getElementById('weight_mercado').value);

            // Normalizar pesos para que sumen 100
            const total_weight = w_redes + w_edificaciones + w_mercado;
            const norm_w_redes = w_redes / total_weight;
            const norm_w_edificaciones = w_edificaciones / total_weight;
            const norm_w_mercado = w_mercado / total_weight;

            // Actualizar display de valores
            document.getElementById('value_redes').textContent = `${norm_w_redes.toFixed(2) * 100}%`;
            document.getElementById('value_edificaciones').textContent = `${norm_w_edificaciones.toFixed(2) * 100}%`;
            document.getElementById('value_mercado').textContent = `${norm_w_mercado.toFixed(2) * 100}%`;

            // Calcular puntaje total ponderado
            return data.map(item => {
                const total_score = 
                    (item.score_redes * norm_w_redes * (100 / MAX_SCORE.redes)) + 
                    (item.score_edificaciones * norm_w_edificaciones * (100 / MAX_SCORE.edificaciones)) + 
                    (item.score_mercado * norm_w_mercado * (100 / MAX_SCORE.mercado));
                return { ...item, total_score: parseFloat(total_score.toFixed(2)) };
            }).sort((a, b) => b.total_score - a.total_score); // Ordenar por puntaje total
        }

        function initBarChart(rankedData) {
            const ctx = document.getElementById('barChart').getContext('2d');
            
            const labels = rankedData.map(d => d.empresa);
            const scores = rankedData.map(d => d.total_score);

            if (barChart) {
                barChart.destroy();
            }

            barChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Puntaje Total Ponderado (M치x. 100)',
                        data: scores,
                        backgroundColor: PASTE_COLORS.slice(0, rankedData.length),
                        borderColor: PASTE_BORDER_COLORS.slice(0, rankedData.length),
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { display: false },
                        title: { display: true, text: 'Puntaje Total por Empresa', font: { size: 14 } },
                        datalabels: {
                            anchor: 'end',
                            align: 'top',
                            formatter: (value) => value + 'pts',
                            color: var(--color-text),
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            title: { display: true, text: 'Puntaje Total (pts)' }
                        }
                    }
                }
            });
        }

        function initRadarChart(selectedData, chartId) {
            const ctx = document.getElementById(chartId).getContext('2d');
            
            // Si el gr치fico ya existe, destr칰yelo
            if (chartId === 'radarChart' && radarChart) {
                radarChart.destroy();
            }

            const datasets = selectedData.map((item, index) => {
                // Normalizar puntajes a una escala de 0 a 100 basada en el MAX_SCORE para visualizaci칩n
                return {
                    label: item.empresa,
                    data: [
                        (item.score_redes / MAX_SCORE.redes) * 100,
                        (item.score_edificaciones / MAX_SCORE.edificaciones) * 100,
                        (item.score_mercado / MAX_SCORE.mercado) * 100,
                        item.total_score // Incluir el score total ponderado como un eje adicional
                    ],
                    backgroundColor: PASTE_COLORS[index % PASTE_COLORS.length].replace('0.8', '0.2'), // Menos opacidad
                    borderColor: PASTE_BORDER_COLORS[index % PASTE_BORDER_COLORS.length].replace('0.8', '1'),
                    pointBackgroundColor: PASTE_BORDER_COLORS[index % PASTE_BORDER_COLORS.length].replace('0.8', '1'),
                    pointBorderColor: '#fff',
                    borderWidth: 2
                };
            });

            radarChart = new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: ['Redes Sociales (M치x. 100)', 'Edificaciones (M치x. 100)', 'Tipos de Mercado (M치x. 100)', 'Puntaje Total Ponderado'],
                    datasets: datasets
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'top' },
                        tooltip: { callbacks: { label: (context) => context.dataset.label + ': ' + context.formattedValue + '%' } }
                    },
                    scales: {
                        r: {
                            angleLines: { color: '#ccc' },
                            grid: { color: '#eee' },
                            pointLabels: { font: { size: 12 } },
                            suggestedMin: 0,
                            suggestedMax: 100,
                            ticks: { display: false }
                        }
                    }
                }
            });
        }

        function updateStatsSummary(rankedData) {
            const summaryDiv = document.getElementById('stats_summary');
            let html = '';

            // Calcular promedio y desviaci칩n est치ndar del score total
            const scores = rankedData.map(d => d.total_score);
            const avg = scores.reduce((sum, val) => sum + val, 0) / scores.length;
            const variance = scores.map(s => Math.pow(s - avg, 2)).reduce((sum, val) => sum + val, 0) / scores.length;
            const stdDev = Math.sqrt(variance);

            // Calcular mejor y peor desempe침o por criterio
            const bestRedes = rankedData.reduce((prev, curr) => (prev.score_redes > curr.score_redes) ? prev : curr);
            const bestEdificaciones = rankedData.reduce((prev, curr) => (prev.score_edificaciones > curr.score_edificaciones) ? prev : curr);
            const bestMercado = rankedData.reduce((prev, curr) => (prev.score_mercado > curr.score_mercado) ? prev : curr);

            html += `
                <p><strong>Puntaje Total (Ponderado):</strong></p>
                <ul>
                    <li>**Promedio General:** ${avg.toFixed(2)} pts</li>
                    <li>**Desviaci칩n Est치ndar:** ${stdDev.toFixed(2)} pts (Indica la dispersi칩n de resultados)</li>
                    <li>**Mejor Desempe침o Total:** ${rankedData[0].empresa} (${rankedData[0].total_score} pts)</li>
                    <li>**Peor Desempe침o Total:** ${rankedData[rankedData.length - 1].empresa} (${rankedData[rankedData.length - 1].total_score} pts)</li>
                </ul>
                <p><strong>Mejor Cobertura por Criterio:</strong></p>
                <ul>
                    <li>**Redes Sociales:** ${bestRedes.empresa} (${bestRedes.score_redes} / ${MAX_SCORE.redes})</li>
                    <li>**Edificaciones:** ${bestEdificaciones.empresa} (${bestEdificaciones.score_edificaciones} / ${MAX_SCORE.edificaciones})</li>
                    <li>**Tipos de Mercado:** ${bestMercado.empresa} (${bestMercado.score_mercado} / ${MAX_SCORE.mercado})</li>
                </ul>
            `;
            summaryDiv.innerHTML = html;
        }

        function getSelectedProviders() {
            const checkboxes = document.querySelectorAll('#multiselect_proveedores input[type="checkbox"]:checked');
            const selectedNames = Array.from(checkboxes).map(cb => cb.value);
            return data.filter(d => selectedNames.includes(d.empresa));
        }

        // --- Funci칩n Principal de Actualizaci칩n ---

        function updateDashboard() {
            const rankedData = calculateScores(data);
            initBarChart(rankedData);
            updateStatsSummary(rankedData);
            
            // Actualizar el gr치fico radar
            const selectedProviders = getSelectedProviders();
            if (selectedProviders.length > 0) {
                // Actualizar la versi칩n visible si est치 abierta o la versi칩n en el modal
                if (document.getElementById('radarModal').style.display === 'block') {
                    initRadarChart(selectedProviders, 'radarChart');
                } else {
                    // Inicializar en el modal para que est칠 listo al abrir
                    initRadarChart(selectedProviders, 'radarChart');
                }
            } else {
                if (radarChart) radarChart.destroy();
            }
        }

        // --- Funciones del Modal ---

        function openRadarModal() {
            const selectedProviders = getSelectedProviders();
            if (selectedProviders.length < 1) {
                alert("Por favor, selecciona al menos un proveedor para la comparaci칩n.");
                return;
            }
            // Re-renderizar el gr치fico radar en el modal con los datos seleccionados
            initRadarChart(selectedProviders, 'radarChart'); 

            document.getElementById('radarModal').style.display = 'block';
        }

        function closeRadarModal() {
            document.getElementById('radarModal').style.display = 'none';
        }

        // Ejecutar en la carga
        window.onload = () => {
            initMultiselect();
            updateDashboard();
        };

        // Cerrar modal al hacer clic fuera de 칠l
        window.onclick = function(event) {
            if (event.target == document.getElementById('radarModal')) {
                closeRadarModal();
            }
        }
    </script>
</body>
</html>
